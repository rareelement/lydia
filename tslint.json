{
  "extends": [
    "tslint:recommended",
    "tslint-sonarts"
  ],
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true
    ],
    "curly": false,
    "ordered-imports": [
      false
    ],
    "no-commented-code": [
      false
    ],
    "max-line-length": [
      true,
      145
    ],
    "member-ordering": false,
    "max-classes-per-file": [
      true,
      5
    ],
    "prefer-switch": true,
    "no-small-switch": false,
    "object-literal-sort-keys": false,
    "no-empty-interface": false,
    "no-empty": false,
    "prefer-immediate-return": false,
    "only-arrow-functions": false
  }
}